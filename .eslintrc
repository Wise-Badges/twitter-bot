{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "ignorePatterns": ["node_modules/"],
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-console": 0,
    "no-unused-expressions": ["error", { "allowTernary": true }],
    "no-return-assign": [2, "except-parens"],
    "no-param-reassign": ["error", { "props": false }]
  }
}
